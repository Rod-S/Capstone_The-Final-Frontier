extends layout

block content
  // Jumbotron
  .jumbotron.jumbotron-fluid.bg-dark.text-white
    .container.text-sm-center.pt-5
      h1.display-2 The Final Frontier
      h2.lead A website dedicated to NASA's Picture of the Day and the location of the International Space Station.
  // /Jumbotron
  // PotD
  .container
    .row
      .col-md-6
        .card.mb-3.bg-dark.text-white
          h3.my-4.text-center NASA Picture of the Day
          img#apod_img_id.card-img-top
          p.pl-2#copyright
          .card-body
            h4#apod_title.card-title
            p#apod_explaination.card-text
              | LOADING...
            p.card-text        
      .col-md-6
        .card.mb-3.bg-dark.text-white
          h3.my-4.text-center Look up, it's the International Space Station!
          #mapid 
            p
              | LOADING...
          .card-body
            h4.card-title
            p.card-text.text-center
              | The ISS orbits Earth once every 92 minutes. That's approximately 5 miles per second!
              // Modal
              #register.modal.fade(tabindex='-1' role='dialog' aria-labelledby='register form' aria-hidden='true')
                .modal-dialog(role='document')
                  .modal-content.bg-dark
                    .modal-header.bg-secondary.text-white
                      h5#exampleModalLabel.modal-title Contact Info
                      button.close(type='button' data-dismiss='modal' aria-label='Close')
                        span(aria-hidden='true') &times;
                    .modal-body.bg-dark
                      // registration Form
                      form(action="/", method="post")
                        .alert.alert-secondary.alert-dismissible.fade.show(role='alert')
                          strong Register your email to see the Astronomy Picture of the Day directly from your inbox! 
                          button.close(type='button' data-dismiss='alert' aria-label='Close')
                            span(aria-hidden='true') &times;
                        h5.mb-4 Basic Info
                        .form-group
                          label.form-control-label(for='fullName') Name:
                          input#name.form-control(type='text' name="fullName" placeholder='Name' required='')
                        .form-group
                          label.form-control-label(for='emailAddress') Email:
                          input#email.form-control(type='text' name="emailAddress" placeholder='Email' pattern='/^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/' required='')
                        hr.mb-4
                        button.btn.btn-primary(type='submit') Sign me up!
                      // /registration Form
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js' integrity='sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1' crossorigin='anonymous')
  script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js' integrity='sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM' crossorigin='anonymous')
  script(src='../static/scripts/APICalls.js')
  script(src='./routes/index.js')
